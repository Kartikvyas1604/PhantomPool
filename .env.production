# PhantomPool Production Environment Configuration
# CRITICAL: Set all values before deploying with real funds

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=phantompool_production
DB_USER=phantompool
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_FOR_PRODUCTION
DB_READ_HOST=localhost
DB_READ_PORT=5432
DB_READ_USER=phantompool_read
DB_READ_PASSWORD=CHANGE_THIS_READ_PASSWORD_FOR_PRODUCTION

# Audit Database
AUDIT_DB_HOST=localhost
AUDIT_DB_PORT=5432
AUDIT_DB_NAME=phantompool_audit
AUDIT_DB_USER=phantompool_audit
AUDIT_DB_PASSWORD=CHANGE_THIS_AUDIT_PASSWORD_FOR_PRODUCTION

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_FOR_PRODUCTION

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
JUPITER_FEE_ACCOUNT=YOUR_JUPITER_FEE_ACCOUNT_HERE

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=CHANGE_THIS_TO_SECURE_64_CHARACTER_SECRET_FOR_PRODUCTION
API_KEY=CHANGE_THIS_TO_SECURE_API_KEY_FOR_PRODUCTION

# CORS Origins (comma-separated)
CORS_ORIGINS=https://phantompool.app,https://www.phantompool.app

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
ADMIN_RATE_LIMIT_MAX=100
TRADING_RATE_LIMIT_MAX=10

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
COMPANY_NAME=PhantomPool Inc.
COMPANY_EIN=YOUR_COMPANY_EIN_HERE
COMPANY_ADDRESS=YOUR_COMPANY_ADDRESS_HERE
COMPANY_CONTACT=compliance@phantompool.app
COMPLIANCE_OFFICER_NAME=Your Compliance Officer Name

# =============================================================================
# RISK MANAGEMENT CONFIGURATION
# =============================================================================
MAX_POSITION_SIZE=0.10
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.15
MAX_LEVERAGE=1.0
VOLATILITY_LIMIT=0.30
LIQUIDITY_THRESHOLD=0.10

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/phantompool.crt
SSL_KEY_PATH=/etc/ssl/private/phantompool.key

# =============================================================================
# DEPLOYMENT METADATA
# =============================================================================
VERSION=1.0.0
DEPLOYMENT_DATE=2025-10-19T00:00:00Z
ENVIRONMENT=production

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Price Feed APIs
COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY_HERE
BIRDEYE_API_KEY=YOUR_BIRDEYE_API_KEY_HERE

# KYC/AML Services
JUMIO_API_KEY=YOUR_JUMIO_API_KEY_HERE
CHAINALYSIS_API_KEY=YOUR_CHAINALYSIS_API_KEY_HERE

# Email/SMS Notifications
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN_HERE

# =============================================================================
# EMERGENCY CONTACTS
# =============================================================================
EMERGENCY_PHONE=+1-XXX-XXX-XXXX
EMERGENCY_EMAIL=emergency@phantompool.app
COMPLIANCE_EMAIL=compliance@phantompool.app
TECHNICAL_EMAIL=tech@phantompool.app