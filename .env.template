# PhantomPool Production Environment Template
# Copy this file to .env and customize the values

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_HOST=phantompool-db
POSTGRES_PORT=5432
POSTGRES_DB=phantompool
POSTGRES_USER=phantompool
POSTGRES_PASSWORD=your_secure_database_password_here

# =============================================================================
# Redis Configuration  
# =============================================================================
REDIS_HOST=phantompool-cache
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
API_KEY=your_api_key_for_authentication
CORS_ORIGINS=https://phantompool.app,https://www.phantompool.app

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ADMIN_RATE_LIMIT_MAX=10

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_PASSWORD=your_grafana_admin_password

# =============================================================================
# Deployment Metadata
# =============================================================================
VERSION=1.0.0
DEPLOYMENT_DATE=2025-10-18T00:00:00Z

# =============================================================================
# SSL Configuration (if using custom certificates)
# =============================================================================
# SSL_CERT_PATH=/etc/nginx/ssl/phantompool.crt
# SSL_KEY_PATH=/etc/nginx/ssl/phantompool.key

# =============================================================================
# External Service Configuration
# =============================================================================
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_WS_URL=wss://api.mainnet-beta.solana.com