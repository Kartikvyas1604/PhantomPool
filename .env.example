# PhantomPool Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-side only, DO NOT expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for direct connections (if needed)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# =====================================================
# SOLANA CONFIGURATION
# =====================================================

# Solana RPC endpoint
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Alternative: https://solana-api.projectserum.com

# Solana network (mainnet-beta, devnet, testnet)
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Jupiter API endpoint
NEXT_PUBLIC_JUPITER_API_URL=https://quote-api.jup.ag/v6

# =====================================================
# CRYPTOGRAPHIC KEYS
# =====================================================

# ElGamal keypair for order encryption (base64 encoded)
ELGAMAL_PRIVATE_KEY=your-elgamal-private-key-base64
ELGAMAL_PUBLIC_KEY=your-elgamal-public-key-base64

# VRF keypair for fair ordering (base64 encoded)
VRF_PRIVATE_KEY=your-vrf-private-key-base64
VRF_PUBLIC_KEY=your-vrf-public-key-base64

# Threshold network master key (for secret sharing)
THRESHOLD_MASTER_KEY=your-threshold-master-key-base64

# JWT signing secret for API authentication
JWT_SECRET=your-jwt-secret-here

# =====================================================
# EXECUTOR NETWORK
# =====================================================

# Executor node endpoints (5 nodes for 3-of-5 threshold)
EXECUTOR_NODE_1_URL=https://executor1.phantompool.io
EXECUTOR_NODE_2_URL=https://executor2.phantompool.io
EXECUTOR_NODE_3_URL=https://executor3.phantompool.io
EXECUTOR_NODE_4_URL=https://executor4.phantompool.io
EXECUTOR_NODE_5_URL=https://executor5.phantompool.io

# Executor authentication keys
EXECUTOR_AUTH_KEY=your-executor-auth-key

# =====================================================
# API CONFIGURATION
# =====================================================

# API base URL
NEXT_PUBLIC_API_BASE_URL=https://api.phantompool.io

# WebSocket endpoint
NEXT_PUBLIC_WS_URL=wss://ws.phantompool.io

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# CORS origins (comma-separated)
CORS_ORIGINS=https://phantompool.io,https://www.phantompool.io

# =====================================================
# MONITORING & ANALYTICS
# =====================================================

# Analytics tracking (optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Error reporting (Sentry, etc.)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# Performance monitoring
MONITORING_ENDPOINT=https://monitoring.phantompool.io

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =====================================================
# REDIS (for caching and sessions)
# =====================================================

# Redis connection string
REDIS_URL=redis://localhost:6379

# Redis password (if required)
REDIS_PASSWORD=your-redis-password

# =====================================================
# SECURITY
# =====================================================

# Session secret for cookie encryption
SESSION_SECRET=your-session-secret-here

# CSRF protection secret
CSRF_SECRET=your-csrf-secret-here

# API key for external services
API_KEY_EXTERNAL=your-external-api-key

# Wallet adapter endpoint
WALLET_ADAPTER_ENDPOINT=https://wallet.phantompool.io

# =====================================================
# DEVELOPMENT
# =====================================================

# Enable debug mode
DEBUG=false

# Mock data for development
USE_MOCK_DATA=false

# Skip cryptographic verification (dev only)
SKIP_CRYPTO_VERIFICATION=false

# Enable verbose logging
VERBOSE_LOGGING=false

# =====================================================
# PRODUCTION SETTINGS
# =====================================================

# Environment (development, staging, production)
NODE_ENV=production

# Enable SSL
FORCE_HTTPS=true

# Domain for cookies
COOKIE_DOMAIN=.phantompool.io

# CDN URL for static assets
CDN_URL=https://cdn.phantompool.io

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=10485760

# =====================================================
# BACKUP & RECOVERY
# =====================================================

# Database backup endpoint
BACKUP_ENDPOINT=https://backup.phantompool.io

# Backup encryption key
BACKUP_ENCRYPTION_KEY=your-backup-key-here

# Recovery phrase for wallet operations
RECOVERY_PHRASE="your twelve word recovery phrase here"

# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable specific features
FEATURE_ADVANCED_ORDERS=true
FEATURE_INSTITUTIONAL_TRADING=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_MOBILE_APP=false

# Maximum order size (in micro-units)
MAX_ORDER_SIZE=1000000000

# Minimum order size (in micro-units)
MIN_ORDER_SIZE=1000

# Trading fee (basis points, 100 = 1%)
TRADING_FEE_BPS=30

# =====================================================
# NOTIFICATIONS  
# =====================================================

# Email service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM_ADDRESS=noreply@phantompool.io

# Push notification service
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Telegram bot (for alerts)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id